{
  "manifest_version": 3,
  "name": "VerticalTabs",
  "version": "0.1.0",
  "description": "Display all open browser tabs in a clean vertical sidebar, inspired by Arc browser. Quickly search, switch, reorder, and manage your tabs.",
  "minimum_chrome_version": "114",
  "permissions": [
    "tabs",
    "sidePanel",
    "favicon"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open VerticalTabs",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
